<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.chimpee.com.mymusicplayer.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_width_0"
        android:layout_weight="3"
        android:padding="@dimen/padding_small"
        android:layout_marginTop="@dimen/padding_medium"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backward_button"
            android:layout_width="@dimen/height_width_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/backward"
            android:padding="@dimen/padding_image_view"
            />
        <ImageView
            android:id="@+id/play_button"
            android:layout_width="@dimen/height_width_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/play"
            android:padding="@dimen/padding_image_view"/>

        <ImageView
            android:id="@+id/forward_button"
            android:layout_width="@dimen/height_width_0"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/forward"
            android:padding="@dimen/padding_image_view"/>
    </LinearLayout>

    <TextView
        android:id="@+id/title_textview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_width_0"
        android:layout_weight="1"
        tools:text="Now playing"
        android:gravity="center"
        android:textSize="@dimen/font_size_medium"/>

    <TextView
        android:id="@+id/artist_textview"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_width_0"
        android:layout_weight="1"
        tools:text="Now playing"
        android:gravity="center"
        android:textSize="@dimen/font_size_small"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_width_0"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tracks_textview"
            android:layout_width="@dimen/height_width_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tracks"
            android:gravity="center"
            android:textSize="@dimen/font_size_large"/>
        <TextView
            android:id="@+id/albums_textview"
            android:layout_width="@dimen/height_width_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Albums"
            android:gravity="center"
            android:textSize="@dimen/font_size_large"/>

    </LinearLayout>

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/list"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_width_0"
        android:layout_weight="6"
        android:padding="@dimen/padding_medium"
         />

</LinearLayout>
